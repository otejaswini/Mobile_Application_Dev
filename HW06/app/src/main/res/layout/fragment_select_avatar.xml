<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectAvatarFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SelectAvatarFragment">

        <ImageView
            android:id="@+id/f1"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/avatar_f_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/f2"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/avatar_f_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/f1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/f3"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/avatar_f_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f1" />

        <ImageView
            android:id="@+id/m1"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/avatar_m_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/f3"
            app:layout_constraintTop_toBottomOf="@+id/f2" />

        <ImageView
            android:id="@+id/m2"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/avatar_m_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f3" />

        <ImageView
            android:id="@+id/m3"
            android:layout_width="175dp"
            android:layout_height="159dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/avatar_m_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/m2"
            app:layout_constraintTop_toBottomOf="@+id/m1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
